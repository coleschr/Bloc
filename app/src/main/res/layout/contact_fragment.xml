<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/title_size"
        android:textColor="@color/colorTitle"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="@dimen/above_title_space"
        android:text="@string/contact_title" />


    <TextView
        android:id="@+id/textView_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/side_margin"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawablePadding="@dimen/width_contact_buttons"
        android:drawableTint="@color/colorNotClicked"
        android:textColor="@color/colorText"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/phoneNum_contact"
        android:textSize="@dimen/text_size"
        tools:text="@string/phoneNum_contact" />


    <LinearLayout
        android:id="@+id/linearLayout_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginTop="@dimen/btwn_space"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_email"
            android:layout_width="@dimen/width_contact_buttons"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorBackground"
            android:tint="@color/colorNotClicked"
            app:srcCompat="@drawable/ic_email_black_24dp" />

        <TextView
            android:id="@+id/textView_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/side_horiz_layout"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/email_contact"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size"
            tools:text="@string/email_contact" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/side_margin"
        android:layout_marginTop="@dimen/btwn_space"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton_website"
            android:layout_width="@dimen/width_contact_buttons"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorBackground"
            android:tint="@color/colorNotClicked"
            app:srcCompat="@drawable/ic_laptop_black_24dp" />

        <TextView
            android:id="@+id/textView_website_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/side_horiz_layout"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorText"
            android:text="@string/website_address"
            android:textSize="@dimen/text_size"
            tools:text="@string/website_address" />
    </LinearLayout>

</LinearLayout>